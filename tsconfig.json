{
    "compilerOptions": {
        "target": "es2016",
        "module": "commonjs",
        "rootDir": "./src",
        "outDir": "./dist",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipLibCheck": true,
        "baseUrl": ".",
        "paths": {
            "@/*": ["src/*"],
            "@models/*": ["src/models/*"],
            "@services/*": ["src/services/*"],
            "@routes/*": ["src/routes/*"],
            "@middleware/*": ["src/middleware/*"],
            "@utils/*": ["src/utils/*"],
            "@config/*": ["src/config/*"]
        }
    },
    "include": ["src/**/*", "__tests__"],
    "exclude": ["node_modules"]
}
